<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content ">
                    <h1 class="page-name">Dashboard</h1>
                    <ol class="breadcrumb">
                        <li><a href="/index">Home</a></li>
                        <li class="active">Manager</li>
                        <li class="active">Users</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline dashboard-menu text-center">
                    <li><a href="product">Products</a></li>
                    <li><a class="active" href="user">Users</a></li>

                </ul>
                <div class="dashboard-wrapper user-dashboard" style="padding-bottom: 0 !important;">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr class="row">
                                    <th class="col">Full name</th>
                                    <th class="col">mail | role</th>
                                    <th class="col">phone</th>
                                    <th class="col">address</th>
                                    <th class="col-md-2 col-xs-12 col-sm-2">
                                        <form action="/"><input type="search" class="form-control"
                                                placeholder="Search..."></form>
                                    </th>
                                </tr>
                            </thead>
                            {{!-- Data tempt --}}
                            {{!-- =========== --}}
                            {{!-- =========== --}}
                            {{!-- =========== --}}
                            <tbody>
                                {{#each userData}}
                                <tr class="row align-item-center">
                                    <th class="col">
                                        <div class="d-flex">
                                            <h5 class="mb-0">{{this.fname}} {{this.lname}}</h5>
                                        </div>
                                    </th>
                                    <th class="col">
                                        <div>
                                            <h5>{{this.email}} | {{this.role}}</h5>
                                        </div>
                                    </th>
                                    <th class="col">
                                        <div>
                                            <h5>{{this.phone}}</h5>
                                        </div>
                                    </th>
                                    <th class="col">
                                        <div>
                                            <h5>{{this.address}}</h5>
                                        </div>
                                    </th>
                                    <td class="col-md-2 col-xs-12 col-sm-2">
                                        <div class="btn-group" role="group">
                                            <a href="/manager/user/update/{{this._id}}">
                                                <button type="button" class="btn btn-default"><i class="tf-pencil2"
                                                        aria-hidden="true"></i></button>
                                            </a>
                                            <a href="/manager/user/delete/{{this._id}}"
                                                onclick="return confirm('Bạn có muốn xóa không ?')">
                                                <button type="button" class="btn btn-default"><i class="tf-ion-close"
                                                        aria-hidden="true"></i></button>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                            {{!-- =========== --}}
                            {{!-- =========== --}}
                            {{!-- =========== --}}
                            {{!-- =========== --}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>